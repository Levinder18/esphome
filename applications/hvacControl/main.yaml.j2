  - id: lvgl_display
    displays:
      - round_display
    touchscreens:
      - touch
    buffer_size: 100%
    bg_color: Black
    theme:
      obj:
        pad_all: 0
        border_width: 0
{% if not local_run %}
    encoders:
      group: empty
      sensor: encoder
      enter_button: front_button
    on_idle:
      - timeout: 20s
        then:
          - logger.log: idle 20s timeout
          - lvgl.pause:
          - light.turn_off:
              id: display_backlight
              transition_length: 5s
{% endif %}
    page_wrap: true
    pages:
      - id: main_page
        on_load:
          then:
            - logger.log: "ðŸš€ main page loaded!"
            {{ generate_on_load_globals_set('', '') | indent(12) }}
        {{ generate_swap_events_handlers('main_page') | indent(8) }}
