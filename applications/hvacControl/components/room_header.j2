{#
  RoomHeader Component Macro for SVGL/LVGL UI
  Displays the room name and optional icon as a header for each room screen.
  Usage: {{ room_header(id, text, icon=None, font=None) }}
#}
{% macro room_header(id, text, icon=None) %}
{% do register_component(id=id) %}
obj:
  x: 120
  y: 80
  width: 250
  height: 120
  bg_color: Black
  widgets:
    {% if text %}
    - label:
        id: {{ id }}
        text: "{{ text }}"
        text_font: montserrat_28
        align: CENTER
        text_color: White
    {% endif %}
    {% if icon %}
    - label:
        id: {{ id }}_icon
        text: "{{ icon }}"
        text_font: icons_28
        align: TOP_MID
        text_color: White
    {% endif %}
{% endmacro %}
