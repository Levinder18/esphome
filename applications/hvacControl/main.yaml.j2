# LVGL Configuration
lvgl:
  - id: lvgl_display
    displays:
      - round_display
    touchscreens:
      - touch
    buffer_size: 100%
{% if not local_run %}
    encoders:
      sensor: encoder
      enter_button: front_button
    on_idle:
      - timeout: 20s
        then:
          - logger.log: idle 20s timeout
          - lvgl.pause:
          - light.turn_off:
              id: display_backlight
              transition_length: 5s
{% endif %}
    page_wrap: true
    pages:
      - id: main_page
        on_load:
          then:
            - logger.log: "ðŸš€ main page loaded!"
        on_swipe_up:
          lvgl.page.next:
            animation: OUT_TOP
            time: 300ms
        on_swipe_down:
          lvgl.page.next:
            animation: OUT_BOTTOM
            time: 300ms
        width: 100%
        bg_color: Black
        widgets:
          - tileview:
              id: main_tileview
              width: 480
              height: 480
              on_value:
                - if:
                    condition:
                      lambda: return tile == id(tile1);
                    then:
                      - logger.log: "tile1 is now showing"
              tiles:
                - id: tile1
                  column: 0
                  row: 0
                  widgets: 
                    - {{ arc_countdown("arc1", duration=5000) | indent(22) }}
                        width: 480
                        height: 480
                    - label:
                        id: coord_text
                        align: CENTER
                        text_align: CENTER
                        text: 'Touch the screen'
                - id: tile2
                  column: 1
                  row: 0
                  bg_color: LightBlue
                  widgets:
                    - label:
                        align: CENTER
                        text_align: CENTER
                        text: "This is the second tile"
      - id: third_page
        on_load:
          then:
            - logger.log: "ðŸš€ third page loaded!"
        on_swipe_up:
          lvgl.page.next:
            animation: OUT_TOP
            time: 300ms
        on_swipe_down:
          lvgl.page.next:
            animation: OUT_BOTTOM
            time: 300ms
        width: 100%
        bg_color: Black
        widgets:
          - {{ temperature_arc("temperature_arc", initial_value='16', arc_color="Red", bg_color="Blue") | indent(12) }}
          - {{ room_header("living_room", text="Living Room") | indent(12) }}